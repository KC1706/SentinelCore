# CyberCortex Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Core API Keys
GROQ_API_KEY=your_groq_api_key_here
BLACKBOX_API_KEY=your_blackbox_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Coral Protocol Configuration
CORAL_SERVER_URL=https://coral-protocol-server.com
CORAL_API_KEY=your_coral_api_key_here
CORAL_AGENT_ID=cybercortex_agent_001

# Fetch.ai uAgents Configuration
FETCHAI_AGENT_ADDRESS=your_fetchai_agent_address
FETCHAI_PRIVATE_KEY=your_fetchai_private_key
FETCHAI_NETWORK=testnet
FETCHAI_MAILBOX_KEY=your_mailbox_key

# Snowflake Cortex Configuration
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=CYBERCORTEX_DB
SNOWFLAKE_SCHEMA=SECURITY_ANALYTICS
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_ROLE=CYBERCORTEX_ROLE

# Database Configuration
DATABASE_URL=postgresql://cybercortex:secure_password@localhost:5432/cybercortex_db
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-for-token-signing
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_VERSION=v1

# External Services
WEBHOOK_SECRET=your_webhook_secret_for_external_integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@domain.com
EMAIL_PASSWORD=your_email_password

# Security Scanning Configuration
NMAP_TIMEOUT=300
VULNERABILITY_SCAN_TIMEOUT=1800
MAX_CONCURRENT_SCANS=5
SCAN_RATE_LIMIT=10

# MCP Server Configuration
MCP_SERVER_PORT=9000
MCP_SERVER_HOST=0.0.0.0
MCP_TOOLS_ENABLED=nmap,nessus,burp,metasploit,wireshark

# Monitoring and Analytics
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
TELEMETRY_ENABLED=true
METRICS_RETENTION_DAYS=30

# Compliance and Audit
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_FRAMEWORK=SOC2,ISO27001,NIST
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20
RATE_LIMIT_ENABLED=true

# Feature Flags
ENABLE_AUTONOMOUS_SCANNING=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_MULTI_AGENT_COORDINATION=true
ENABLE_BLOCKCHAIN_LOGGING=false